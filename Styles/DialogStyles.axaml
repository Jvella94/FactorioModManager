<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- Dialog Window Base Style -->
  <Style Selector="Window.dialog">
    <Setter Property="Background" Value="#1E1E1E"/>
    <Setter Property="WindowStartupLocation" Value="CenterOwner"/>
    <Setter Property="CanResize" Value="False"/>
  </Style>
  
  <!-- Dialog Labels -->
  <Style Selector="TextBlock.dialog-label">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Margin" Value="0,0,0,5"/>
  </Style>
  
  <!-- Dialog Input Fields -->
  <Style Selector="TextBox.dialog-input, NumericUpDown.dialog-input">
    <Setter Property="MinHeight" Value="32"/>
    <Setter Property="Margin" Value="0,0,0,15"/>
  </Style>
  
  <!-- Dialog Button Container -->
  <Style Selector="StackPanel.dialog-buttons">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="HorizontalAlignment" Value="Right"/>
    <Setter Property="Spacing" Value="10"/>
    <Setter Property="Margin" Value="0,20,0,0"/>
  </Style>
  
  <!-- Dialog Buttons -->
  <Style Selector="Button.dialog-button">
    <Setter Property="MinWidth" Value="80"/>
    <Setter Property="Height" Value="32"/>
  </Style>
  
  <!-- Dialog Title -->
  <Style Selector="TextBlock.dialog-title">
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Margin" Value="0,0,0,15"/>
  </Style>
  
  <!-- Dialog Content Container -->
  <Style Selector="StackPanel.dialog-content">
    <Setter Property="Margin" Value="20"/>
    <Setter Property="Spacing" Value="15"/>
  </Style>
</Styles>
