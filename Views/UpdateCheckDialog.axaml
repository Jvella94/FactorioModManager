<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FactorioModManager.Views.UpdateCheckDialog"
        Title="Check for Updates"
        Width="400" Height="200"
        CanResize="False"
        WindowStartupLocation="CenterOwner">

  <StackPanel Margin="20" Spacing="15">
    <TextBlock Text="Check for mods updated in the last:" FontSize="14"/>
    
    <NumericUpDown Name="HoursInput"
                   Value="1"
                   Minimum="1"
                   Maximum="168"
                   Width="200"
                   HorizontalAlignment="Left"/>
    
    <TextBlock Text="hour(s)" Margin="0,-10,0,0"/>
    
    <StackPanel Orientation="Horizontal" Spacing="10" 
                HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button Content="Check" Click="CheckUpdates" Width="100"/>
      <Button Content="Cancel" Click="Cancel" Width="100"/>
    </StackPanel>
  </StackPanel>
</Window>
