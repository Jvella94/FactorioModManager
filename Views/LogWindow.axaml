<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FactorioModManager.Views.LogWindow"
        Title="Application Logs"
        Width="900" Height="650"
        Background="#1E1E1E"
        Icon="avares://FactorioModManager/Assets/avalonia-logo.ico">

  <Grid RowDefinitions="Auto,*,Auto" Margin="10">
    <!-- Header -->
    <Border Grid.Row="0"
            Background="#252525"
            Padding="15"
            CornerRadius="5"
            Margin="0,0,0,10">
      <Grid ColumnDefinitions="Auto,*,Auto">
        <TextBlock Grid.Column="0"
                   Text="ðŸ“‹ Application Logs"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>

        <TextBlock Grid.Column="2"
                   Name="LogCountText"
                   FontSize="12"
                   Foreground="#888"
                   VerticalAlignment="Center"/>
      </Grid>
    </Border>

    <!-- Log Content -->
    <Border Grid.Row="1"
            Background="#252525"
            CornerRadius="5"
            Padding="10">
      <ScrollViewer>
        <SelectableTextBlock Name="LogTextBlock"
                            FontFamily="Consolas,Courier New,monospace"
                            FontSize="12"
                            TextWrapping="Wrap"/>
      </ScrollViewer>
    </Border>

    <!-- Action Buttons -->
    <!-- Action Buttons -->
    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Spacing="10"
                Margin="0,10,0,0"
                HorizontalAlignment="Right">
      <Button Content="ðŸ”„ Refresh"
              Click="Refresh_Click"
              Width="100"/>
      <Button Content="ðŸ“ Open Log File"
              Click="OpenLogFile_Click"
              Width="130"/>
      <Button Content="ðŸ“¦ Archive Logs"
              Click="ArchiveLogs_Click"
              Width="120"/>
      <Button Content="ðŸ—‘ï¸ Clear Logs"
              Click="ClearLogs_Click"
              Width="100"/>
      <Button Content="Close"
              Click="Close_Click"
              Width="80"/>
    </StackPanel>

  </Grid>
</Window>
