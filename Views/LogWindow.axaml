<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FactorioModManager.Views.LogWindow"
        x:CompileBindings="False"
        Title="Application Log"
        Width="900" Height="600"
        MinWidth="600" MinHeight="400">

  <Grid RowDefinitions="*,Auto">
    <ListBox Grid.Row="0"
             Name="LogListBox"
             FontFamily="Consolas,monospace"
             FontSize="12"
             Margin="10"/>

    <StackPanel Grid.Row="1" Orientation="Horizontal"
                Spacing="10" Margin="10"
                HorizontalAlignment="Right">
      <Button Content="Copy All Logs" Click="CopyLogs" Width="120"/>
      <Button Content="Clear" Click="ClearLogs" Width="100"/>
      <Button Content="Close" Click="CloseWindow" Width="100"/>
    </StackPanel>
  </Grid>
</Window>
