<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FactorioModManager.App"
             xmlns:local="using:FactorioModManager"
             RequestedThemeVariant="Default">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.Styles>
    <FluentTheme />
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />

    <!-- Import Theme Colors First -->
    <StyleInclude Source="/Styles/Themes/Dialog.axaml" />

    <!-- Import Dialog Styles -->
    <StyleInclude Source="/Styles/Dialog/Windows.axaml" />
    <StyleInclude Source="/Styles/Dialog/Text.axaml" />
    <StyleInclude Source="/Styles/Dialog/Controls.axaml" />
    <StyleInclude Source="/Styles/Dialog/Buttons.axaml" />
    <StyleInclude Source="/Styles/Dialog/Layout.axaml" />
  </Application.Styles>

  <Application.Resources>
    <!-- Register the icon as a resource -->
    <Bitmap x:Key="AppIcon">avares://FactorioModManager/Assets/FMM.png</Bitmap>
  </Application.Resources>
</Application>