<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FactorioModManager.ViewModels"
        x:Class="FactorioModManager.Views.ChangelogWindow"
        Title="Changelog"
        Width="700" Height="600"
        MinWidth="500" MinHeight="400">

  <Grid RowDefinitions="Auto,*">
    <Border Grid.Row="0" BorderBrush="#333" BorderThickness="0,0,0,1"
            Background="#2B2B2B" Padding="15">
      <TextBlock FontSize="18" FontWeight="Bold" Name="ModTitle" />
    </Border>

    <ScrollViewer Grid.Row="1" Padding="15">
      <TextBlock Name="ChangelogText" TextWrapping="Wrap" FontFamily="Consolas,Courier New" />
    </ScrollViewer>
  </Grid>
</Window>