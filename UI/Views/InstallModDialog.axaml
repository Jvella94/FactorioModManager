<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FactorioModManager.Views.InstallModDialog"
        Classes="dialog"
        Title="Install Mod"
        Width="500" Height="220">

  <StackPanel Classes="dialog-content">
    <TextBlock Classes="dialog-title"
               Text="Install Mod" />
    <StackPanel Orientation="Horizontal">
      <Button Content="ðŸ“ Install from ZIP file"
          Click="InstallFromFile_Click"
          HorizontalAlignment="Stretch"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center"
          Height="50"
          Width="200"
          FontSize="14"
          Margin="0,0,0,10" />

      <Button Content="ðŸŒ Install from Mod Portal URL"
              Click="InstallFromUrl_Click"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Height="50"
              FontSize="14"
              Width="250"
              Margin="10,0,0,10" />
    </StackPanel>

    <Grid ColumnDefinitions="*,*,*,*">
      <Button Grid.Column="1" Grid.ColumnSpan="2"
           Content="Cancel"
           Click="Cancel_Click"
           HorizontalAlignment="Stretch"
           HorizontalContentAlignment="Center"
           VerticalContentAlignment="Center"
           Height="40"
           IsCancel="True" />
    </Grid>
  </StackPanel>
</Window>