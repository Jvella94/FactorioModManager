<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FactorioModManager.Views.InstallModDialog"
        Classes="dialog"
        Title="Install Mod"
        Width="500" Height="300">

  <StackPanel Classes="dialog-content">
