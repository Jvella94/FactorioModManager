            Height="50"
            FontSize="14"
            Width="250"
            Margin="10,0,0,10" />
      </StackPanel>
  

    <Button Content="Cancel"
            Click="Cancel_Click"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Height="40"
            IsCancel="True" />
  </StackPanel>
</Window>