<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FactorioModManager.Views.InstallModDialog"
        Classes="dialog"
        Title="Install Mod"
        Width="500" Height="220">

  <StackPanel Classes="dialog-content">
    <TextBlock Classes="dialog-title"
               Text="Install Mod" />
      <StackPanel Orientation="Horizontal">
		    <Button Content="ðŸ“ Install from ZIP file"
            Click="InstallFromFile_Click"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Height="50"
            Width="180"
            FontSize="14"
            Margin="20,0,0,10" />

    <Button Content="ðŸŒ Install from Mod Portal URL"
            Click="InstallFromUrl_Click"
