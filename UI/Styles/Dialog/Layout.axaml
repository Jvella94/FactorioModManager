<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- Dialog Content Container -->
  <Style Selector="StackPanel.dialog-content">
    <Setter Property="Margin" Value="{StaticResource DialogPadding}"/>
    <Setter Property="Spacing" Value="{StaticResource DialogSpacing}"/>
  </Style>
  
  <!-- Dialog Content with Padding Variants -->
  <Style Selector="StackPanel.dialog-content.compact">
    <Setter Property="Margin" Value="10"/>
    <Setter Property="Spacing" Value="10"/>
  </Style>
  
  <Style Selector="StackPanel.dialog-content.spacious">
    <Setter Property="Margin" Value="30"/>
    <Setter Property="Spacing" Value="20"/>
  </Style>
  
  <!-- Dialog Button Container -->
  <Style Selector="StackPanel.dialog-buttons">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="HorizontalAlignment" Value="Right"/>
    <Setter Property="Spacing" Value="10"/>
    <Setter Property="Margin" Value="0,20,0,0"/>
  </Style>
  
  <!-- Left-aligned Buttons -->
  <Style Selector="StackPanel.dialog-buttons.left">
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>
  
  <!-- Center-aligned Buttons -->
  <Style Selector="StackPanel.dialog-buttons.center">
    <Setter Property="HorizontalAlignment" Value="Center"/>
  </Style>
  
  <!-- Full-width Button Container -->
  <Style Selector="StackPanel.dialog-buttons.full-width">
    <Setter Property="Orientation" Value="Vertical"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
  </Style>
  
  <!-- Form Field Group -->
  <Style Selector="StackPanel.form-field">
    <Setter Property="Margin" Value="0,0,0,15"/>
  </Style>
  
  <!-- Scrollable Dialog Content -->
  <Style Selector="ScrollViewer.dialog-scroll">
    <Setter Property="MaxHeight" Value="600"/>
    <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
  </Style>
  
  <!-- Dialog Section (Grouped Content) -->
  <Style Selector="Border.dialog-section">
    <Setter Property="BorderBrush" Value="{StaticResource DialogBackgroundHoverBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="15"/>
    <Setter Property="Margin" Value="0,10,0,10"/>
    <Setter Property="CornerRadius" Value="{StaticResource DialogBorderRadius}"/>
  </Style>
  
  <!-- Horizontal Field Group (Label + Input side by side) -->
  <Style Selector="Grid.form-row">
    <Setter Property="Margin" Value="0,0,0,10"/>
  </Style>
  
  <!-- Separator -->
  <Style Selector="Separator.dialog-separator">
    <Setter Property="Margin" Value="0,10,0,10"/>
    <Setter Property="Background" Value="{StaticResource DialogBackgroundHoverBrush}"/>
  </Style>
</Styles>
